<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.menisamet.totake.AddNewListActivity">


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_name_edit_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="List Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Location"
        android:id="@+id/textView2"
        android:layout_below="@+id/list_name_edit_text"
        android:layout_alignStart="@+id/list_name_edit_text"
        android:layout_marginTop="30dp" />

    <fragment
        android:id="@+id/place_autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"


        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="23dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_start_date"
        android:onClick="showDatePickerDialog"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/place_autocomplete_fragment"
        android:id="@+id/start_date_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_end_date"
        android:onClick="showDatePickerDialog"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/list_name_edit_text"
        android:id="@+id/end_date_button" />
</RelativeLayout>
